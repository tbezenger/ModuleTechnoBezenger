<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/idText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Id :"
        android:textSize="24dp" />

    <EditText
        android:id="@+id/idTextEdit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/idText"
        android:layout_alignBaseline="@id/idText"
        android:textSize="24dp"
        android:inputType="number"/>

    <TextView
        android:id="@+id/att1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idText"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/att1Edit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idText"
        android:layout_toRightOf="@id/att1"
        android:layout_alignBaseline="@id/att1"
        android:textSize="24dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/att2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/att1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="24dp"/>

    <EditText
        android:id="@+id/att2Edit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/att1"
        android:layout_toRightOf="@id/att2"
        android:layout_alignBaseline="@id/att2"
        android:textSize="24dp"
        android:inputType="number"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Valider"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:onClick="validation"/>

</RelativeLayout>